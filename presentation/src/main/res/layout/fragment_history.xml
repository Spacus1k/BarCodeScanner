<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background_color">

    <TextView
        android:id="@+id/historyTextView"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_action_bar_height"
        android:background="@color/default_color_action_bar"
        android:gravity="center"
        android:text="@string/text_history_activity"
        android:textColor="@color/default_text_color_action_bar"
        android:textSize="@dimen/default_action_bar_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/barCodes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/historyTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>